pipeline{

	agent any
	tools{
		maven 'maven3'
	}

	options {
  		buildDiscarder logRotator(daysToKeepStr: '3', numToKeepStr: '2')
	}

	stages{
		
		stage('Code Checkout'){
			steps{
				git branch: 'main', url: 'https://github.com/keshav1239/jenkins-jobs'
			}
		}
		
		stage('Build'){
			steps{
				sh script: 'mvn clean install'
			}
		}
		
		stage('deploy'){
			steps{
				sshagent(['tomcat']) {
					sh """
					scp 'ssh -o StrictHostKeyChecking=no' target/sample.war ec2-user@172.31.13.119:/opt/tomcat9/webapps/
					
					ssh ec2-user@172.31.13.119 /opt/tomcat9/bin/shutdown.sh
					
					ssh ec2-user@172.31.13.119 /opt/tomcat9/bin/startup.sh
					
					"""
				}
			}
		}
	
	}

}
