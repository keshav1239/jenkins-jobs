currentBuild.displayName="keshav-app-#"+currentBuild.number
properties([
    parameters([
        extendedChoice( 
            name: 'enviroment-id', 
			defaultPropertyFile: '/var/lib/jenkins/kk.properties', 
			defaultPropertyKey: 'id',
			description: 'Select Environment Name', 
			descriptionPropertyValue: 'Select Environment', 
			multiSelectDelimiter: ',',
            defaultValue: 'Select Environment', 
            propertyFile: '/var/lib/jenkins/kk.properties', 
			propertyKey: 'id', 
			quoteValue: false, 
			saveJSONParameterToFile: false, 
			type: 'PT_SINGLE_SELECT', 
			visibleItemCount: 5
            
        )
    ])
])
pipeline{

	agent any
	tools{
		maven 'maven3'
	}

	options {
  		buildDiscarder logRotator(daysToKeepStr: '3', numToKeepStr: '2')
	}

	stages{
		
		stage('Code Checkout'){
			steps{
				echo " Taking checkout of ${params.branch}  "
				git branch: "${params.branch}", url: 'https://github.com/keshav1239/jenkins-jobs'
			}
		}
		
		stage('Build'){
			steps{
				sh script: 'mvn clean install'
			}
		}
		
		stage('deploy'){
			steps{
				sshagent(['tomcat']) {
					sh """
					scp -o StrictHostKeyChecking=no target/sample.war ec2-user@172.31.13.119:/opt/tomcat9/webapps/
					
					ssh ec2-user@172.31.13.119 /opt/tomcat9/bin/shutdown.sh
					
					ssh ec2-user@172.31.13.119 /opt/tomcat9/bin/startup.sh
					
					"""
				}
			}
		}
	
	}

}
